# $OpenBSD$

COMMENT =		create and use a local lib/ for perl modules with PERL5LIB

MODULES =		cpan
CPAN_AUTHOR =		HAARG
DISTNAME =		local-lib-2.000012
CATEGORIES =		devel

MAINTAINER =		Edward <edward@rdtan.net>

# The Artistic License 1.0
PERMIT_PACKAGE_CDROM =	Yes

MODCPAN_EXAMPLES =	Yes
MODCPAN_EXAMPLES_DIST=  eg

post-install:
	${MODCPAN_POST_INSTALL}
	@mkdir -p ${PREFIX}/share/doc/${DISTNAME}
	${INSTALL_DATA} ${WRKDIST}/README ${PREFIX}/share/doc/${DISTNAME}/
	${INSTALL_DATA} ${WRKDIST}/Changes ${PREFIX}/share/doc/${DISTNAME}/

.include <bsd.port.mk>
